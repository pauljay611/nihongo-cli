{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": ["ES6"],
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}
